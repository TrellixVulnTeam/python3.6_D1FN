Date: Sun, 24 Apr 2022 19:06:12 -0700
Subject: build-math-object

---
 Makefile.pre.in | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/Makefile.pre.in b/Makefile.pre.in
index aa84e41..fe1aeb7 100644
--- a/Makefile.pre.in
+++ b/Makefile.pre.in
@@ -21,7 +21,8 @@
 # === Variables set by makesetup ===
 
 MODNAMES=       _MODNAMES_
-MODOBJS=        _MODOBJS_
+# filter out duplicate object files (_math.o)
+MODOBJS=           $(sort _MODOBJS_)
 MODLIBS=        _MODLIBS_
 
 # === Variables set by configure
@@ -572,8 +573,9 @@ pybuilddir.txt: $(BUILDPYTHON)
 	fi
 
 # This is shared by the math and cmath modules
+# don't build with -fPIC when building as math and cmath as builtins
 Modules/_math.o: Modules/_math.c Modules/_math.h
-	$(CC) -c $(CCSHARED) $(PY_CORE_CFLAGS) -o $@ $<
+	$(CC) -c $(if $(findstring _math.o, $(MODOBJS)),,$(CCSHARED)) $(PY_CORE_CFLAGS) -o $@ $<
 
 # blake2s is auto-generated from blake2b
 $(srcdir)/Modules/_blake2/blake2s_impl.c: $(srcdir)/Modules/_blake2/blake2b_impl.c $(srcdir)/Modules/_blake2/blake2b2s.py
